---
import BaseLayout from '../layouts/BaseLayout.astro'
import NewsCard from '../components/NewsCard.astro'
import { loadNews, getNewsYears, groupNewsByYear } from '../lib/data/news'

// 加载新闻数据
const newsItems = await loadNews()
const years = getNewsYears(newsItems)
const newsByYear = groupNewsByYear(newsItems)

// 格式化年份显示
function formatYear(year: number): string {
  return `${year}年`
}
---
<BaseLayout title="新闻动态">
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="mb-8">
      <h1 class="text-2xl font-semibold text-slate-900">新闻动态</h1>
      <p class="mt-2 text-slate-600">了解课题组最新动态、研究成果和学术活动</p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      {/* 左侧时间轴导航 */}
      <aside class="lg:col-span-1">
        <div class="sticky top-6">
          <div class="rounded-lg border border-slate-200 p-4 bg-white">
            <h2 class="text-sm font-semibold text-slate-700 mb-3">时间轴</h2>
            <div class="space-y-1">
              {years.map((year: number) => (
                <a 
                  href={`#year-${year}`}
                  class="block px-3 py-2 rounded text-slate-700 hover:bg-slate-50 hover:text-brand-900 transition-colors"
                >
                  {formatYear(year)}
                </a>
              ))}
            </div>
          </div>
        </div>
      </aside>
      
      {/* 右侧新闻内容 */}
      <div class="lg:col-span-3">
        {years.map((year: number) => {
          const yearNews = newsByYear.get(year) || []
          return (
            <div id={`year-${year}`} class="mb-10">
              {/* 年份标题 */}
              <div class="flex items-center mb-6">
                <div class="w-3 h-3 rounded-full bg-brand-500 mr-3"></div>
                <h2 class="text-xl font-semibold text-slate-900">
                  {formatYear(year)}
                </h2>
                <span class="ml-3 text-sm text-slate-500">
                  ({yearNews.length}条)
                </span>
              </div>
              
              {/* 年份内的新闻列表 */}
              <div class="space-y-6">
                {yearNews.map((news: any) => (
                  <NewsCard 
                    news={news}
                    layout="horizontal"
                    showImage={true}
                    showDescription={true}
                    showDate={true}
                  />
                ))}
              </div>
            </div>
          )
        })}
      </div>
    </div>
  </section>
</BaseLayout>
