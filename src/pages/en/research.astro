---
import BaseLayout from '../../layouts/BaseLayout.astro'
import PaperCard from '../../components/PaperCard.astro'
import { getCollection } from 'astro:content'
const papers = await getCollection('papers')
const sorted = papers.sort((a,b) => b.data.date.getTime() - a.data.date.getTime())
---
<BaseLayout title="Publications (EN)">
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <h1 class="text-2xl font-semibold text-slate-900">Publications</h1>
    <div class="mt-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {sorted.map(p => <PaperCard paper={p} />)}
    </div>
  </section>
</BaseLayout>
