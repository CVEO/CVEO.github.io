      const targetId = this.getAttribute('data-target');
      const targetSection = document.getElementById(targetId);
      const isExpanded = targetSection.style.maxHeight === 'none' || targetSection.style.maxHeight === '';
      
      if (isExpanded) {
        targetSection.style.maxHeight = '500px';
        this.querySelector('span').textContent = '展开全部';
        this.querySelector('svg').style.transform = 'rotate(0deg)';
      } else {
        targetSection.style.maxHeight = 'none';
        this.querySelector('span').textContent = '收起';
        this.querySelector('svg').style.transform = 'rotate(180deg)';
      }
    });
  });
});
</script>