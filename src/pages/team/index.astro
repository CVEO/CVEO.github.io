---
import BaseLayout from '../../layouts/BaseLayout.astro'
import MemberCard from '../../components/MemberCard.astro'
import { getCollection } from 'astro:content'
import alumniData from '../../data/alumni.json'

const members = await getCollection('members') || []
const alumni = alumniData || []

function byGroup(g: string) { 
  return (members || [])
    .filter(m => (m.data.group || '').toLowerCase() === g.toLowerCase())
    .sort((a, b) => (a.data.order || 999) - (b.data.order || 999))
}
---
<BaseLayout title="团队成员">
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-slate-900 mb-4">团队成员</h1>
      <p class="text-lg text-slate-600 max-w-3xl mx-auto">
        武汉大学CVEO课题组汇聚了来自计算机视觉与地球观测交叉领域的优秀研究人员
      </p>
    </div>

    <div class="mb-16">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-semibold text-slate-900">指导老师</h2>
        <span class="text-sm text-slate-500">
          {(byGroup('Professor') || []).length + (byGroup('Researcher') || []).length} 位
        </span>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {(byGroup('Professor') || []).map(m => <MemberCard member={m} />)}
        {(byGroup('Researcher') || []).map(m => <MemberCard member={m} />)}
      </div>
    </div>

    <div class="mb-16">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-semibold text-slate-900">科研助理</h2>
        <span class="text-sm text-slate-500">{byGroup('ResearchAssistant').length} 位</span>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {byGroup('ResearchAssistant').map(m => <MemberCard member={m} />)}
      </div>
    </div>

    <div class="mb-16">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-semibold text-slate-900">学生团队</h2>
        <span class="text-sm text-slate-500">
          {byGroup('PhD').length + byGroup('Master').length + byGroup('Undergrad').length} 位
        </span>
      </div>
      
      <div class="mb-10">
        <h3 class="text-xl font-semibold text-slate-900 mb-6">博士研究生</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {byGroup('PhD').map(m => <MemberCard member={m} />)}
        </div>
      </div>
      
      <div class="mb-10">
        <h3 class="text-xl font-semibold text-slate-900 mb-6">硕士研究生</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {byGroup('Master').map(m => <MemberCard member={m} />)}
        </div>
      </div>
      
      <div>
        <h3 class="text-xl font-semibold text-slate-900 mb-6">本科生</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {byGroup('Undergrad').map(m => <MemberCard member={m} />)}
        </div>
      </div>
    </div>

    <div>
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-semibold text-slate-900">团队顾问</h2>
        <span class="text-sm text-slate-500">{byGroup('Advisor').length} 位</span>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {byGroup('Advisor').map(m => <MemberCard member={m} />)}
      </div>
    </div>

    <div class="mt-16 pt-8 border-t border-slate-200">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-semibold text-slate-900">毕业学生去向</h2>
        <span class="text-sm text-slate-500">{alumni.length} 位</span>
      </div>
      
      <div class="overflow-x-auto rounded-lg border border-slate-200">
        <table class="min-w-full divide-y divide-slate-200">
          <thead class="bg-slate-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">姓名</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">毕业时间</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">研究方向</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">毕业去向</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">身份</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-slate-200">
            {alumni
              .sort((a, b) => (a.order || 999) - (b.order || 999))
              .map((alum) => {
                const isWuhan = alum.educationType !== 'JointTraining'
                const bgColor = isWuhan ? 'bg-white' : 'bg-slate-50'
                const degreeMap = {
                  'Bachelor': '本科',
                  'Master': '硕士', 
                  'PhD': '博士'
                }
                const educationTypeMap = {
                  'WuhanUndergrad': '武大本科',
                  'WuhanMaster': '武大硕士',
                  'WuhanPhD': '武大博士',
                  'JointTraining': '联合培养'
                }
                
                return (
                  <tr class={`${bgColor} hover:bg-slate-50`}>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">
                      {alum.name}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                      {alum.graduationDate}
                    </td>
                    <td class="px-6 py-4 text-sm text-slate-500">
                      {alum.researchDirection}
                    </td>
                    <td class="px-6 py-4 text-sm text-slate-500">
                      {alum.destination}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                      <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                        isWuhan 
                          ? 'bg-blue-100 text-blue-800' 
                          : 'bg-purple-100 text-purple-800'
                      }`}>
                        {(educationTypeMap as any)[alum.educationType]} · {(degreeMap as any)[alum.degree]}
                      </span>
                    </td>
                  </tr>
                )
              })}
          </tbody>
        </table>
      </div>
      
      <div class="mt-4 text-sm text-slate-500">
        <div class="flex items-center space-x-4">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-blue-100 mr-2"></div>
            <span>武汉大学毕业生</span>
          </div>
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-purple-100 mr-2"></div>
            <span>联合培养毕业生</span>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>