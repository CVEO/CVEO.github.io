---
import BaseLayout from '../../layouts/BaseLayout.astro'
import completedProjectsData from '../../data/completed_projects.json'
---

<BaseLayout title="已结题项目">
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="mb-8">
      <h1 class="text-2xl font-semibold text-slate-900 mb-4">已结题项目</h1>
      <p class="text-slate-700">以下是课题组已完成结题的研究项目列表</p>
    </div>

    <div class="rounded-lg border border-slate-200 bg-white overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200">
          <thead class="bg-slate-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">项目名称</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">负责人</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">项目类型</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">起止时间</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">结题时间</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-700 uppercase tracking-wider">状态</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-slate-200">
            {completedProjectsData.map(project => (
              <tr class="hover:bg-slate-50 transition">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-slate-900">{project.title}</div>
                  <div class="text-sm text-slate-600">{project.description}</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">{project.leader}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">{project.type}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">{project.period}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">{project.completedDate}</td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-green-50 text-green-700 border border-green-200">{project.status}</span>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    <div class="mt-8 text-center">
      <a href="/" class="inline-flex items-center justify-center px-6 py-3 rounded-lg border-2 border-brand-900 text-brand-900 hover:bg-brand-50 hover:border-brand-900 active:bg-brand-100 active:scale-95 transition-all duration-200 font-medium text-base min-h-[44px] min-w-[120px]">
        返回首页
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>