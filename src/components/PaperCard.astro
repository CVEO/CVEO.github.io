---
interface Contribution {
  authorIndex: number
  description: string
  symbol: string
}

const { paper, showAbstract = false, showLink = false } = Astro.props as {
  paper: any
  showAbstract?: boolean
  showLink?: boolean
}

function formatDate(dateStr: string): string {
  const date = new Date(dateStr)
  const year = date.getFullYear()
  const month = (date.getMonth() + 1).toString().padStart(2, '0')
  return `${year}年${month}月`
}

function getAuthorDisplay(author: string, idx: number): {html: string, title: string} {
  let html = author
  let title = ''
  const roles: string[] = []
  
  if (paper.data.equalFirst && paper.data.equalFirst.includes(idx)) {
    html += '<sup>†</sup>'
    roles.push('共同第一作者')
  }
  if (paper.data.corresponding && paper.data.corresponding.includes(idx)) {
    html += '<sup>*</sup>'
    roles.push('通讯作者')
  }
  
  if (paper.data.otherContributions) {
    const contributions = paper.data.otherContributions.filter((c: Contribution) => c.authorIndex === idx)
    contributions.forEach((contrib: Contribution) => {
      html += `<sup>${contrib.symbol}</sup>`
      roles.push(contrib.description)
    })
  }
  
  if (roles.length > 0) {
    title = roles.join('，')
  }
  
  return { html, title }
}
---
<div class="p-4 rounded-lg border border-slate-200 bg-white hover:shadow-md transition">
  <div class="flex justify-between items-start mb-4">
    <div class="flex-grow">
      <h3 class="text-lg font-semibold text-slate-900">{paper.data.title}</h3>
      <p class="mt-2 text-slate-700">{paper.data.journal} • {formatDate(paper.data.date)}</p>
    </div>
    {paper.data.partition && (
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-brand-50 text-brand-900 border border-brand-200 ml-4 flex-shrink-0 cursor-help" title="中科院分区">
        {paper.data.partition}
      </span>
    )}
  </div>
  
  <div class="mt-4">
    <div class="flex flex-wrap items-center gap-x-2 gap-y-1 text-slate-600">
      {paper.data.authors.map((author: string, idx: number) => {
        const authorInfo = getAuthorDisplay(author, idx)
        return (
          <>
            {idx > 0 && (
              <span class="text-slate-400 select-none">·</span>
            )}
            <span 
              class={`author-item px-1 py-0.5 rounded-sm hover:bg-slate-50 transition-colors ${authorInfo.title ? 'cursor-help' : ''}`}
              set:html={authorInfo.html}
              title={authorInfo.title}
            ></span>
          </>
        )
      })}
    </div>
  </div>
  
  {showLink && paper.data.link && paper.data.link !== '#' && (
    <div class="mt-3">
      <p class="text-sm text-slate-700">
        <span class="font-medium">DOI/链接：</span>
        <a href={paper.data.link} target="_blank" class="text-brand-900 hover:underline break-all">
          {paper.data.link}
        </a>
      </p>
    </div>
  )}
  
  {showAbstract && paper.data.abstract && (
    <div class="mt-4 bg-slate-50 p-4 rounded-lg">
      <p class="text-sm text-slate-600 leading-relaxed">
        <span class="font-medium text-slate-800">摘要：</span>
        {paper.data.abstract}
      </p>
    </div>
  )}
</div>