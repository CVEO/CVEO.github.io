---
interface Contribution {
  authorIndex: number
  description: string
  symbol: string
}

const { paper, showAbstract = false, showLink = false } = Astro.props as {
  paper: any
  showAbstract?: boolean
  showLink?: boolean
}

function formatDate(dateStr: string): string {
  const date = new Date(dateStr)
  const year = date.getFullYear()
  const month = (date.getMonth() + 1).toString().padStart(2, '0')
  return `${year}年${month}月`
}

function getAuthorDisplay(author: string, idx: number): {html: string, title: string} {
  let html = author
  let title = ''
  const roles: string[] = []
  
  if (paper.data.equalFirst && paper.data.equalFirst.includes(idx)) {
    html += '<sup>†</sup>'
    roles.push('共同第一作者')
  }
  if (paper.data.corresponding && paper.data.corresponding.includes(idx)) {
    html += '<sup>*</sup>'
    roles.push('通讯作者')
  }
  
  if (paper.data.otherContributions) {
    const contributions = paper.data.otherContributions.filter((c: Contribution) => c.authorIndex === idx)
    contributions.forEach((contrib: Contribution) => {
      html += `<sup>${contrib.symbol}</sup>`
      roles.push(contrib.description)
    })
  }
  
  if (roles.length > 0) {
    title = roles.join('，')
  }
  
  return { html, title }
}
---
<div class="p-4 rounded-lg border border-slate-200 bg-white hover:shadow-md transition">
  <div class="flex justify-between items-start mb-4">
    <div class="flex-grow">
      <h3 class="text-lg font-semibold text-slate-900">{paper.data.title}</h3>
      <p class="mt-2 text-slate-700">{paper.data.journal} • {formatDate(paper.data.date)}</p>
    </div>
    {paper.data.partition && (
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-brand-50 text-brand-900 border border-brand-200 ml-4 flex-shrink-0 cursor-help" title="中科院分区">
        {paper.data.partition}
      </span>
    )}
  </div>
  
  <div class="mt-4">
    <div class="flex flex-wrap items-center gap-x-2 gap-y-1 text-slate-600">
      {paper.data.authors.map((author: string, idx: number) => {
        const authorInfo = getAuthorDisplay(author, idx)
        return (
          <>
            {idx > 0 && (
              <span class="text-slate-400 select-none">·</span>
            )}
            <span 
              class={`author-item px-1 py-0.5 rounded-sm hover:bg-slate-50 transition-colors ${authorInfo.title ? 'cursor-help' : ''}`}
              set:html={authorInfo.html}
              title={authorInfo.title}
            ></span>
          </>
        )
      })}
    </div>
  </div>
  
  {(showLink && paper.data.link && paper.data.link !== '#') || paper.data.wechatArticle || paper.data.codeDataLink ? (
    <div class="mt-3 flex flex-wrap gap-3">
      {showLink && paper.data.link && paper.data.link !== '#' && (
        <a 
          href={paper.data.link} 
          target="_blank" 
          class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm bg-brand-50 text-brand-900 border border-brand-200 hover:bg-brand-100 hover:border-brand-300 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
          </svg>
          DOI/链接
        </a>
      )}
      {paper.data.wechatArticle && (
        <a 
          href={paper.data.wechatArticle} 
          target="_blank" 
          class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm bg-green-50 text-green-700 border border-green-200 hover:bg-green-100 hover:border-green-300 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          推文解读
        </a>
      )}
      {paper.data.codeDataLink && (
        <a 
          href={paper.data.codeDataLink} 
          target="_blank" 
          class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm bg-blue-50 text-blue-700 border border-blue-200 hover:bg-blue-100 hover:border-blue-300 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
          </svg>
          代码/数据
        </a>
      )}
    </div>
  ) : null}
  
  {showAbstract && paper.data.abstract && (
    <div class="mt-4 bg-slate-50 p-4 rounded-lg">
      <p class="text-sm text-slate-600 leading-relaxed">
        <span class="font-medium text-slate-800">摘要：</span>
        {paper.data.abstract}
      </p>
    </div>
  )}
</div>