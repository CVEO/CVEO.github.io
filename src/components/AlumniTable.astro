---
/**
 * 校友表格组件
 * 支持研究生和本科生两种数据格式
 * 默认显示所有记录，使用滚动条模式
 */

// ==================== 类型定义 ====================
interface GraduateAlumni {
  name: string
  graduationDate: string
  researchDirection: string
  destination: string
  degree: string
  educationType: string
}

interface UndergradAlumni {
  name: string
  graduationDate: string
  school: string
  project: string
  destination: string
}

type AlumniItem = GraduateAlumni | UndergradAlumni

interface Props {
  alumni: AlumniItem[] | AlumniItem[][]
  title?: string
  type?: 'graduate' | 'undergrad'
}

// ==================== 组件配置 ====================
const { 
  alumni = [[]], 
  title = "毕业学生去向",
  type = 'graduate'
} = Astro.props

// 常量配置
const DEGREE_MAP = {
  'Bachelor': '本科',
  'Master': '硕士', 
  'PhD': '博士'
} as const

const EDUCATION_TYPE_MAP = {
  'WuhanUndergrad': '武大本科',
  'WuhanMaster': '武大硕士',
  'WuhanPhD': '武大博士',
  'JointTraining': '联合培养'
} as const

const TABLE_MAX_HEIGHT = '500px' // 表格最大高度

// ==================== 工具函数 ====================
/**
 * 从日期字符串中提取年份
 */
function extractYear(dateStr: string): number {
  const match = dateStr.match(/\d{4}/)
  return match ? parseInt(match[0]) : 0
}

/**
 * 获取教育类型排序权重（仅研究生使用）
 */
function getEducationTypeWeight(eduType: string): number {
  const weights: Record<string, number> = {
    'WuhanPhD': 1,
    'WuhanMaster': 2,
    'WuhanUndergrad': 3,
    'JointTraining': 4
  }
  return weights[eduType] || 999
}

// ==================== 数据处理 ====================
// 处理一维或二维数组
const flatAlumni = Array.isArray(alumni[0]) && Array.isArray(alumni[0][0]) 
  ? (alumni as AlumniItem[][]).flat() 
  : alumni as AlumniItem[]
const totalItems = flatAlumni.length

/**
 * 排序校友数据
 * 1. 按毕业年份降序（最近的在前）
 * 2. 研究生数据额外按教育类型排序
 */
const sortedAlumni = [...flatAlumni].sort((a, b) => {
  const yearA = extractYear(a.graduationDate)
  const yearB = extractYear(b.graduationDate)
  
  // 优先按年份降序
  if (yearA !== yearB) {
    return yearB - yearA
  }
  
  // 研究生数据额外排序
  if (type === 'graduate' && 'educationType' in a && 'educationType' in b) {
    const weightA = getEducationTypeWeight(a.educationType)
    const weightB = getEducationTypeWeight(b.educationType)
    return weightA - weightB
  }
  
  return 0
})
---

<div class="mt-16 pt-8 border-t border-slate-200">
  <!-- 表格标题和计数 -->
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-semibold text-slate-900">{title}</h2>
    <span class="text-sm text-slate-500">{totalItems} 位</span>
  </div>
  
  <!-- 表格容器 - 固定高度带滚动条 -->
  <div class="rounded-lg border border-slate-200 overflow-hidden">
     <div class="overflow-x-auto overflow-y-auto max-h-[500px]">
      <table class="min-w-full divide-y divide-slate-200">
        <!-- 表头 -->
        <thead class="bg-slate-50 sticky top-0 z-10">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider whitespace-nowrap">姓名</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider whitespace-nowrap">毕业时间</th>
            
            {type === 'graduate' ? (
              <>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider whitespace-nowrap">研究方向</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider whitespace-nowrap">毕业去向</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider whitespace-nowrap">身份</th>
              </>
            ) : (
              <>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider whitespace-nowrap">学院</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider whitespace-nowrap">参与科研项目</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider whitespace-nowrap">毕业去向</th>
              </>
            )}
          </tr>
        </thead>
        
        <!-- 表格内容 -->
        <tbody class="bg-white divide-y divide-slate-200">
          {sortedAlumni.map((alum) => {
            // 研究生数据行
            if (type === 'graduate' && 'educationType' in alum) {
              const isWuhan = alum.educationType !== 'JointTraining'
              const rowClass = isWuhan ? 'bg-white' : 'bg-slate-50'
              const badgeClass = isWuhan 
                ? 'bg-blue-100 text-blue-800' 
                : 'bg-purple-100 text-purple-800'
              
              return (
                <tr class={`${rowClass} hover:bg-slate-50`}>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">
                    {alum.name}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                    {alum.graduationDate}
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-500">
                    {alum.researchDirection}
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-500">
                    {alum.destination}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                    <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${badgeClass}`}>
                      {EDUCATION_TYPE_MAP[alum.educationType as keyof typeof EDUCATION_TYPE_MAP]} · {DEGREE_MAP[alum.degree as keyof typeof DEGREE_MAP]}
                    </span>
                  </td>
                </tr>
              )
            }
            
            // 本科生数据行
            if (type === 'undergrad' && 'school' in alum) {
              return (
                <tr class="bg-white hover:bg-slate-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">
                    {alum.name}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                    {alum.graduationDate}
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-500">
                    {alum.school}
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-500">
                    {alum.project || '-'}
                  </td>
                  <td class="px-6 py-4 text-sm text-slate-500">
                    {alum.destination}
                  </td>
                </tr>
              )
            }
            
            return null
          })}
        </tbody>
      </table>
    </div>
  </div>
  
  <!-- 表格提示信息 -->
  <div class="mt-4">
    <div class="text-sm text-slate-600">
      <span class="font-medium">提示：</span>表格支持滚动查看完整信息。
      {totalItems > 15 && (
        <span class="ml-2">共 {totalItems} 条记录。</span>
      )}
    </div>
  </div>
  
  <!-- 研究生表格颜色图例 -->
  {type === 'graduate' && (
    <div class="mt-4 text-sm text-slate-500">
      <div class="flex items-center space-x-4">
        <div class="flex items-center">
          <div class="w-3 h-3 rounded-full bg-blue-100 mr-2"></div>
          <span>武汉大学毕业生</span>
        </div>
        <div class="flex items-center">
          <div class="w-3 h-3 rounded-full bg-purple-100 mr-2"></div>
          <span>联合培养毕业生</span>
        </div>
      </div>
    </div>
  )}
</div>