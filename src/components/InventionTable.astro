---
import BaseTable from './PatentTable/BaseTable.astro';
import type { Patent } from '../lib/types';

interface Props {
  patents: Patent[];
  sortable?: boolean;
  filterable?: boolean;
  showHeader?: boolean;
  showFooter?: boolean;
  className?: string;
}

const { 
  patents,
  sortable = false,
  filterable = false,
  showHeader = true,
  showFooter = true,
  className = ''
} = Astro.props;
---

<BaseTable 
  patents={patents}
  enhanced={true}
  sortable={sortable}
  filterable={filterable}
  showHeader={showHeader}
  showFooter={showFooter}
  className={className}
/>

<style>
  /* 发明专利特定样式 */
  :global(.invention-table) tr:hover {
    background-color: #f0f9ff;
  }
  
  :global(.invention-table) .type-badge {
    background-color: #dbeafe;
    color: #1e40af;
  }
</style>