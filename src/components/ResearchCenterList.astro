---
interface ResearchCenter {
  name: string
  partners: string[]
  type: string
  established: string
  description: string
  focusAreas?: string[]
  image?: string
  shortDescription?: string
}

const { centers } = Astro.props as {
  centers: ResearchCenter[]
}
---
<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  {centers.map(center => (
    <div class="group p-4 rounded-xl border border-slate-200 bg-white hover:shadow-md hover:border-brand-200 transition-all duration-300">
      <div class="flex flex-col md:flex-row gap-4">
         <div class="md:w-1/3 flex-shrink-0">
          <div class="aspect-[4/3] overflow-hidden rounded-lg bg-slate-100 flex items-center justify-center">
            {center.image ? (
              <img 
                src={center.image}
                alt={`${center.name}牌匾`}
                class="w-full h-full object-contain group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            ) : (
              <svg class="w-16 h-16 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            )}
          </div>
        </div>
        
        <div class="flex-1">
          <div class="mb-3">
            <h3 class="text-lg font-semibold text-slate-900 mb-2 group-hover:text-brand-900 transition-colors duration-300">
              {center.name}
            </h3>
            
            <div class="flex items-center flex-wrap gap-2 mb-3">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-brand-50 text-brand-900 border border-brand-200">
                {center.type}
              </span>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-slate-50 text-slate-700 border border-slate-200">
                成立于 {center.established} 年
              </span>
            </div>
            
            <p class="text-sm text-slate-600 mb-3">
              {center.shortDescription || center.description}
            </p>
          </div>
          
          <div class="space-y-3">
            <div>
              <h4 class="text-xs font-medium text-slate-900 mb-1">合作单位</h4>
              <div class="flex flex-wrap gap-1.5">
                {center.partners.map(partner => (
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-slate-50 text-slate-700 border border-slate-200">
                    {partner}
                  </span>
                ))}
              </div>
            </div>
            
            {center.focusAreas && center.focusAreas.length > 0 && (
              <div>
                <h4 class="text-xs font-medium text-slate-900 mb-1">研究方向</h4>
                <div class="flex flex-wrap gap-1.5">
                  {center.focusAreas.map(area => (
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-brand-green-50 text-brand-green-900 border border-brand-green-200">
                      {area}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  ))}
</div>