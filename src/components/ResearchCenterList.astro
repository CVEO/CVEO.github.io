---
interface ResearchCenter {
  name: string
  partners: string[]
  type: string
  established: string
  description: string
  focusAreas?: string[]
}

const { centers } = Astro.props as {
  centers: ResearchCenter[]
}
---
<div class="space-y-6">
  {centers.map(center => (
    <div class="group p-6 rounded-xl border border-slate-200 bg-white hover:shadow-lg hover:border-brand-200 transition-all duration-300">
      <div class="flex flex-col lg:flex-row lg:items-start gap-6">
        <div class="flex-shrink-0">
          <div class="w-16 h-16 rounded-lg bg-brand-50 flex items-center justify-center text-brand-900 group-hover:bg-brand-100 transition-colors duration-300">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
          </div>
        </div>
        
        <div class="flex-grow">
          <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4 mb-4">
            <div>
              <h3 class="text-xl font-semibold text-slate-900 mb-2 group-hover:text-brand-900 transition-colors duration-300">
                {center.name}
              </h3>
              
              <div class="flex items-center flex-wrap gap-2 mb-3">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-brand-50 text-brand-900 border border-brand-200">
                  {center.type}
                </span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-slate-50 text-slate-700 border border-slate-200">
                  成立于 {center.established} 年
                </span>
              </div>
              
              <div class="mb-4">
                <p class="text-slate-600">
                  {center.description}
                </p>
              </div>
            </div>
          </div>
          
          <div class="space-y-4">
            <div>
              <h4 class="text-sm font-medium text-slate-900 mb-2">合作单位</h4>
              <div class="flex flex-wrap gap-2">
                {center.partners.map(partner => (
                  <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm bg-slate-50 text-slate-700 border border-slate-200">
                    {partner}
                  </span>
                ))}
              </div>
            </div>
            
            {center.focusAreas && center.focusAreas.length > 0 && (
              <div>
                <h4 class="text-sm font-medium text-slate-900 mb-2">研究方向</h4>
                <div class="flex flex-wrap gap-2">
                  {center.focusAreas.map(area => (
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs bg-brand-green-50 text-brand-green-900 border border-brand-green-200">
                      {area}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  ))}
</div>